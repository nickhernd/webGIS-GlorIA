# ==================================================================
# CONFIGURACIÓN DE LA APLICACIÓN GLORIA
# ==================================================================
# Este archivo contiene todas las variables de entorno necesarias.
# Copia este archivo a .env y configura los valores según tu entorno.
#
# IMPORTANTE: Nunca incluyas el archivo .env en el control de versiones
# ==================================================================

# ------------------------------------------------------------------
# CONFIGURACIÓN DEL SERVIDOR
# ------------------------------------------------------------------

# Puerto en el que escuchará el servidor Express
# Por defecto: 3000
PORT=3000

# Host del servidor
# Por defecto: localhost
HOST=localhost

# Entorno de ejecución (development, production, test)
# Por defecto: development
NODE_ENV=development

# ------------------------------------------------------------------
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
# ------------------------------------------------------------------

# Usuario de PostgreSQL
# Por defecto: postgres
DB_USER=postgres

# Contraseña de PostgreSQL
# IMPORTANTE: En producción, esta variable es OBLIGATORIA
# NO uses contraseñas por defecto o vacías en producción
DB_PASSWORD=tu_contraseña_segura_aqui

# Host del servidor PostgreSQL
# Por defecto: localhost
DB_HOST=localhost

# Puerto de PostgreSQL
# Por defecto: 5432
DB_PORT=5432

# Nombre de la base de datos
# Por defecto: gloria
DB_NAME=gloria

# Esquema a utilizar
# Por defecto: gloria
DB_SCHEMA=gloria

# ------------------------------------------------------------------
# CONFIGURACIÓN DEL POOL DE CONEXIONES
# ------------------------------------------------------------------

# Número máximo de conexiones en el pool
# Por defecto: 20
DB_POOL_MAX=20

# Tiempo de inactividad antes de cerrar conexión (milisegundos)
# Por defecto: 30000 (30 segundos)
DB_IDLE_TIMEOUT=30000

# Timeout para establecer conexión (milisegundos)
# Por defecto: 5000 (5 segundos)
DB_CONNECTION_TIMEOUT=5000

# ------------------------------------------------------------------
# CONFIGURACIÓN DE CORS
# ------------------------------------------------------------------

# Habilitar CORS (true/false)
# Por defecto: true
CORS_ENABLED=true

# Origen permitido para CORS
# Use * para permitir todos los orígenes (solo en desarrollo)
# En producción, especifica el dominio exacto
# Por defecto: *
CORS_ORIGIN=*

# ------------------------------------------------------------------
# CONFIGURACIÓN DE SEGURIDAD
# ------------------------------------------------------------------

# Habilitar rate limiting (true/false)
# Por defecto: true
RATE_LIMIT_ENABLED=true

# Ventana de tiempo para rate limit (milisegundos)
# Por defecto: 900000 (15 minutos)
RATE_LIMIT_WINDOW_MS=900000

# Máximo de requests por ventana
# Por defecto: 100
RATE_LIMIT_MAX=100

# Habilitar Helmet middleware para seguridad HTTP (true/false)
# Por defecto: true
HELMET_ENABLED=true

# ------------------------------------------------------------------
# CONFIGURACIÓN DE LOGGING
# ------------------------------------------------------------------

# Nivel de logging (error, warn, info, debug)
# En producción se recomienda 'info' o 'warn'
# En desarrollo se recomienda 'debug'
# Por defecto: debug en desarrollo, info en producción
LOG_LEVEL=debug

# ------------------------------------------------------------------
# CONFIGURACIÓN DE CACHÉ
# ------------------------------------------------------------------

# Habilitar caché (true/false)
# Por defecto: true
CACHE_ENABLED=true

# Tiempo de vida del caché en segundos
# Por defecto: 300 (5 minutos)
CACHE_TTL=300

# ------------------------------------------------------------------
# APIS EXTERNAS - COPERNICUS
# ------------------------------------------------------------------

# URL base de la API de Copernicus
# Por defecto: https://marine.copernicus.eu
COPERNICUS_API_URL=https://marine.copernicus.eu

# Usuario de Copernicus
# Obtén tus credenciales en: https://marine.copernicus.eu/
COPERNICUS_USERNAME=tu_usuario_copernicus

# Contraseña de Copernicus
COPERNICUS_PASSWORD=tu_contraseña_copernicus

# Timeout para llamadas a Copernicus (milisegundos)
# Por defecto: 30000 (30 segundos)
COPERNICUS_TIMEOUT=30000

# ------------------------------------------------------------------
# APIS EXTERNAS - OPENWEATHER
# ------------------------------------------------------------------

# API Key de OpenWeather
# Obtén tu API key en: https://openweathermap.org/api
OPENWEATHER_API_KEY=tu_api_key_openweather

# URL base de la API de OpenWeather
# Por defecto: https://api.openweathermap.org/data/2.5
OPENWEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Timeout para llamadas a OpenWeather (milisegundos)
# Por defecto: 10000 (10 segundos)
OPENWEATHER_TIMEOUT=10000

# ------------------------------------------------------------------
# CONFIGURACIÓN DE RUTAS DE ARCHIVOS
# ------------------------------------------------------------------

# Ruta al directorio del frontend (relativa al backend)
# Por defecto: ../../frontend
FRONTEND_PATH=../../frontend

# Ruta al directorio de scripts
# Por defecto: ../scripts
SCRIPTS_PATH=../scripts

# Ruta al directorio de uploads
# Por defecto: ../uploads
UPLOADS_PATH=../uploads

# Ruta al directorio de exportaciones
# Por defecto: ../exports
EXPORTS_PATH=../exports

